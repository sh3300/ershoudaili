<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ershoudaili.Store_page"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#21b3f3"
        android:id="@+id/dinglan"

        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Bacbutton4"
            android:src="@drawable/back"
            android:background="#00000000"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/top4"
            android:background="#21b3f3"
            android:text="我的店铺"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="12"
            android:textStyle="bold"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dinglan">
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sc2"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:id="@+id/shangchuan_show"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shangchuan_show"
            android:orientation="horizontal"
            android:id="@+id/biaoqian_show">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/information"
            android:layout_toRightOf="@id/shangchuan_show">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:paddingTop="22dp"
                    android:paddingBottom="10dp"
                    android:text="【商家】    "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:id="@+id/name_show"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:paddingBottom="10dp"
                    android:text="店铺名称        "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:id="@+id/store_name"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:paddingBottom="10dp"
                    android:text="活动  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:textSize="20sp"
                    android:id="@+id/activity_store"
                    android:textColor="#000000"
                    android:text="双十一，全场9折"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所有宝贝"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="left"
            android:id="@+id/button_order"
            android:layout_below="@id/shangchuan_show"
            android:layout_marginTop="2dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/biankuang4"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收到订单"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="left"
            android:id="@+id/button_product"
            android:layout_below="@id/button_order"
            android:layout_marginTop="2dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/biankuang4"/>

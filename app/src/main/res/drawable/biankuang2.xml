<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="8dip" />
            <solid
                android:color="#21b3f3"/>
            <stroke
                android:width="2px"
                android:color="#CFCFCF"/>
            <padding
                android:left="10dp"
                android:top="4dp"
                android:right="7dp"
                android:bottom="4dp"
                />
        </shape>
    </item>
</layer-list>